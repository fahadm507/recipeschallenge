
<h3>List of Recipes</h3>
<div id="content">
  <% @results.each do |result| %>
  <li><a href="<%="/recipes/#{result['id']}"%>"><%= result['name'] %></a></li>
  <% end %>
  </div>
<div class="pagination">
  <%if @page !=1 %>
    <a href="/recipes?page=<%= @page - 1%>"><button class="prev">back</button></a>
  <%end%>
    <a href="/recipes?page=<%= @page + 1%>"><button class="prev">Next</button></a>
</div>

